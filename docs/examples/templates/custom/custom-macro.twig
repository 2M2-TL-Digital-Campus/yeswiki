{# Aim : replace show function in .tpl.html (only for string) #}
{# Usage : `show($value,$label,$class,$tag);` => {{ showStr(value,label,class,tag) }} #}
{% macro showStr(value,label = '',class = '',tag = 'p') %}
  {% if tag not in ['p','div','span','h1','h2','h3','h4','h5','h6'] %}
    {% set tag = 'p' %}
  {% endif %}
  {% if value %}
    <{{ tag }}{% if class %} class="{{ class }}"{% endif %}>
      {% if label %}
        <strong>{{ label }}</strong>
      {% endif %}
      {{ value|raw }}
    </{{ tag }}>
  {% endif %}
{% endmacro showStr %}
