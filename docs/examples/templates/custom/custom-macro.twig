{% macro displayValueIfNotEmpty(entry,fieldName,text,form) %}
  {{ include_css('custom/styles/bazar/entry-custom.css') }}
  {% if entry[fieldName] is not empty %}
    <div class="no-display-BAZ-label">
      <strong>{{ text }}</strong>
      {% for field in form.prepared %}
        {% if field.propertyName ==  fieldName %}
          {{ field.renderStaticIfPermitted(entry,null)|raw }}
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
{% endmacro displayValueIfNotEmpty %}

{% macro showIfNotEmpty(text,fieldName,html) %}
  {% if html[fieldName] is not empty %}
    <p><strong>{{ text }}</strong> {{ html[fieldName]|raw }}</p>
  {% endif %}
{% endmacro showIfNotEmpty %}