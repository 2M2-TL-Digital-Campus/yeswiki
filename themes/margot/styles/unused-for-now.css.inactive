
.bazar-list .panel-default {
  border: none;
  background-color:transparent;
}
/* modif fleche accordeon */
.bazar-list .panel-default > .panel-heading {
    color: var(--neutral-color);
    background-color: transparent;
    border-color: var(--neutral-soft-color);
}
.accordion-group .panel-heading .panel-title::after,
.accordion-group .panel-heading.collapsed .panel-title::after {
  content: "\02C5";
  font-size: 1.5em;
  color: var(--neutral-soft-color);
}
.filter-box {
  border: 2px solid var(--neutral-color);
}
.filter-box  .panel-heading {
  color:var(--neutral-light-color);
  background-color: var(--neutral-color);
}
.panel-default > .panel-heading + .panel-collapse > .panel-body {
  border: 2px solid var(--primary-color);
}



.input-group .form-control {
  display: table-cell;
  background-color: var(--neutral-soft-color);
  padding-bottom:5px;
  border-bottom:1px solid var(--neutral-color);
}

.input-group-addon:first-child {
  border-right: 0;
  background-color: transparent;
  color: var(--primary-color);
  font-size: 2.5em;
  border: none;
  padding:0;
}

.bazar-search .input-group-btn {
  display:none;
}
.search-input::-webkit-input-placeholder { /* Chrome/Opera/Safari */
  color: var(--neutral-color);
}
.search-input::-moz-placeholder { /* Firefox 19+ */
  color: var(--neutral-color);
}
.search-input:-ms-input-placeholder { /* IE 10+ */
  color: var(--neutral-color);
}
.search-input:-moz-placeholder { /* Firefox 18- */
  color: var(--neutral-color);
}