{% extends "@bazar/layouts/field.twig" %}

{% block value %}
    {% if showContactForm %}
        <a class="btn btn-default modalbox" title="{{ _t('BAZ_CONTACT_BY_MAIL') }}" href="{{ contactFormUrl|raw }}">
            <i class="fa fa-envelope"></i> {{ _t('BAZ_CONTACT_BY_MAIL') }}
        </a>
    {% else %}
        <a href="mailto:{{ field.value }}" class="BAZ_lien_mail">{{ field.value }}</a></span>
    {% endif %}
{% endblock %}
