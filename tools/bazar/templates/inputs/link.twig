{% extends "@bazar/layouts/input.twig" %}

{% block input %}
    <div class="input-group">
        <input
            type="url"
            value="{{ value ?? field.default }}"
            id="{{ field.name }}"
            name="{{ field.name }}"
            class="form-control input-xxlarge"
            maxlength="{{ field.maxChars }}"
            size="{{ field.maxChars }}"
            placeholder="https://"
            {% if field.required %}required{% endif %}
        />
    </div>
{% endblock %}
