<div class="control-group form-group">
    <label class="control-label col-sm-3">
        {% if field.required %}<span class="symbole_obligatoire"></span>{% endif %}
        {% if field.helper %}
            <img class="tooltip_aide" title="{{ field.helper|raw('html') }}" src="tools/bazar/presentation/images/aide.png" width="16" height="16" alt="image aide" />
        {% endif %}
        {{ field.label }}
    </label>
    <div class="controls col-sm-9">
        <div class="bazar-radio">
            {% for key, option in options %}
            <div class="radio">
                <label for="{{ field.recordId ~ key }}">
                    <input type="radio" id="{{ field.recordId ~ key }}" value="{{ key }}" name="{{ field.recordId }}" {% if value == key %}checked{% endif %} />
                    <span>{{ option }}</span>
                </label>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
