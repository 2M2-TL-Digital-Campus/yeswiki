<div class="control-group form-group">
    <label class="control-label col-sm-3">
        {% if field.required %}<span class="symbole_obligatoire"></span>{% endif %}
        {% if field.helper %}
            <img class="tooltip_aide" title="{{ field.helper|raw('html') }}" src="tools/bazar/presentation/images/aide.png" width="16" height="16" alt="image aide" />
        {% endif %}
        {{ field.label }}
    </label>
    <div class="controls col-sm-9">
        <div class="input-group">
            <input
                type="{{ field.type }}"
                value="{{ value|raw('html') }}"
                id="{{ field.id }}"
                name="{{ field.id }}"
                class="form-control input-xxlarge"
                maxlength="{{ field.maxChars }}"
                size="{{ field.maxChars }}"
                {% if field.pattern %}pattern="{{ field.pattern }}"{% endif %}
                placeholder="{{ field.label|raw('html') }}"
                {% if field.required %}required{% endif %}
            />
        </div>
    </div>
</div>
