		<a href="<?php echo $GLOBALS['wiki']->href('edit', $linkpage); ?>" class="btn btn-default"><i class="glyphicon glyphicon-pencil icon-pencil"></i></a>
		<?php endif; ?>
		<?php if ($GLOBALS['wiki']->UserIsAdmin() || $GLOBALS['wiki']->UserIsOwner()) : ?>
		<a href="<?php echo $GLOBALS['wiki']->href('deletepage', $linkpage); ?>" class="btn btn-danger"><i class="glyphicon glyphicon-trash icon-trash icon-white"></i></a>
		<?php endif; ?>
	</div>
	<div class="clear"></div>
