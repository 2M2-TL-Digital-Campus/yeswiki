<div class="control-group form-group">
  <label class="control-label">{{ _t('TEMPLATE_THEME') }}</label>
  <div class="controls">
    <select class="form-control" id="changetheme" name="theme_select">
      {% for key,value in templates %}
        <option value="{{ key }}"{% if key == favoriteTheme %} selected{% endif %}>{{ key }}</option>
      {% endfor %}
    </select>
  </div>
</div>

<div class="control-group form-group">
  <label class="control-label">{{ _t('TEMPLATE_SQUELETTE') }}</label>
  <div class="controls">
    <select class="form-control" id="changesquelette" name="squelette_select">
      {% for key,value in squelettes|sort %}
        <option value="{{ value }}"{% if key == favoriteSquelette %} selected{% endif %}>{{ value }}</option>
      {% endfor %}
    </select>
  </div>
</div>

<div class="control-group form-group">
  <label class="control-label">{{ _t('TEMPLATE_STYLE') }}</label>
  <div class="controls">
    <select class="form-control" id="changestyle" name="style_select">
      {% for key,value in styles|sort %}
        <option value="{{ value }}"{% if key == favoriteStyle %} selected{% endif %}>{{ value }}</option>
      {% endfor %}
    </select>
  </div>
</div>

{% if presets is not empty %}
  <div class="control-group form-group">
    <label class="control-label">{{ _t('TEMPLATE_PRESET') }}</label>
    <div class="controls">
      <select class="form-control" id="changepreset" name="preset_select">
        {% for key,value in presets|sort %}
          <option value="{{ key }}"{% if key == favoritePreset %} selected{% endif %}>{{ value }}</option>
        {% endfor %}
      </select>
    </div>
  </div>
{% endif %}

